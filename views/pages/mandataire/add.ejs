<%- include('../includes/header.ejs') %>


    <body>
        <%- include('../includes/navbar.ejs') %>
            <div class="content">
                <h1 class="title">Ajouter un mandataire</h1>
                <div class="form-container">
                    <form onsubmit="addMandataire(event)" id="add-form" class="form-flex" enctype="multipart/form-data" method="POST">
                        <div class="form-group">
                            <label for="image" class="form-label">Url du portrait</label>
                            <input type="file" name="mandataireLogo">
                            <input type="text" name="logo" class="form-input" placeholder="Url du logo"/>
                        </div>
                        <div class="form-group">
                            <label for="nom" class="form-label">Nom</label>
                            <input required type="text" name="nom" class="form-input" placeholder="Réponse">
                        </div>
                        <div class="form-group">
                            <label for="prenom" class="form-label">Prénom</label>
                            <input required type="text" name="prenom" class="form-input" placeholder="Réponse">
                        </div>
                        <div class="form-group">
                            <label for="description" class="form-label">Description</label>
                            <input required type="text" name="description" class="form-input" placeholder="Réponse">
                        </div>
                        <div class="form-action">
                            <input type="submit" class="cta" value="Confirmer la création">
                        </div>
                    </form>
                </div>
            </div>

    </body>
    <script>
        function addMandataire(event) {
            event.preventDefault();
            let data = new FormData(document.getElementById('add-form'))
            try {
                fetch('http://localhost:9999/api/mandataires', {
                    method: 'POST',
                    body: data
                })
                .then(response => response.json())
                .then((response) => {
                    console.log(response);
                })
            } catch (error) {
                console.log(error.message);
            }
        }
    </script>
    <script src="/js/index.js"></script>

    </html>