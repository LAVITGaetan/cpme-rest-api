<%- include('../includes/header.ejs') %>
    <%- include('../includes/navbar.ejs') %>
        <div class="content">
            <h1 class="title">Modifier les informations de contact</h1>
            <div class="form-container">
                <form data-redirection="/profil-adherent?id=<%=adherent._id%>"
                    data-message="Informations de contact modifiées, cliquez sur le bouton pour revenir au profil"
                    data-ressource="adherents/<%=adherent._id%>/contact" onsubmit="patchFormContact(event)" id="add-form"
                    class="form-flex" enctype="multipart/form-data" method="POST"> <input value="<%= adherent.logo %>"
                        type="hidden" id="logo" name="logo" class="form-input" placeholder="Url du logo" />
                    <div class="form-group">
                        <label for="titre" class="form-label">Titre du contact</label>
                        <input <% if(adherent.contact) { %>
                        value="<%= adherent.contact.titre %>"
                            <%} %> name="contactTitre" id="contact-titre" type="text" class="form-input"
                                placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="nom" class="form-label">Nom du contact</label>
                        <input <% if(adherent.contact) { %>
                        value="<%= adherent.contact.nom %>"
                            <%} %> type="text" id="contact-nom" name="contact-nom" class="form-input" placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="prenom" class="form-label">Prénom du contact</label>
                        <input <% if(adherent.contact) { %>
                        value="<%= adherent.contact.prenom%>"
                            <%} %> id="contact-prenom"
                                type="text" name="contact-prenom" class="form-input" placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="email" class="form-label">Email du contact</label>
                        <input <% if(adherent.contact) { %>
                        value="<%= adherent.contact.email %>"
                            <%} %> id="contact-email"
                                type="text" name="contact-email" class="form-input" placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="telephone" class="form-label">Téléphone du contact</label>
                        <input <% if(adherent.contact) { %>
                        value="<%= adherent.contact.telephone %>"
                            <%} %>
                                id="contact-telephone" type="text" name="contact-telephone" class="form-input"
                                placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="linkedin" class="form-label">Linkedin du contact</label>
                        <input <% if(adherent.contact) { %>
                        value="<%= adherent.contact.linkedin %>"
                            <%} %>
                                id="contact-linkedin" type="text" name="contact-linkedin" class="form-input"
                                placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="titreSecondaire" class="form-label">Titre du contact secondaire</label>
                        <input <% if(adherent.contactSecondaire) { %>
                        value="<%= adherent.contactSecondaire.titre %>"
                            <%} %>
                                name="contactSecondaireTitre" id="contactSecondaire-titre" type="text" class="form-input"
                                placeholder="Réponse">
                    </div>

                    <div class="form-group">
                        <label for="nomSecondaire" class="form-label">Nom du contact secondaire</label>
                        <input <% if(adherent.contactSecondaire) { %>
                        value="<%= adherent.contactSecondaire.nom %>"
                            <%} %>
                                id="contactSecondaire-nom" type="text" name="contactSecondaire-nom" class="form-input"
                                placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="prenomSecondaire" class="form-label">Prénom du contact secondaire</label>
                        <input <% if(adherent.contactSecondaire) { %>
                        value="<%= adherent.contactSecondaire.prenom %>"
                            <%} %>
                                id="contactSecondaire-prenom" type="text" name="contactSecondaire-prenom"
                                class="form-input"
                                placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="emailSecondaire" class="form-label">Email du contact secondaire</label>
                        <input <% if(adherent.contactSecondaire) { %>
                        value="<%= adherent.contactSecondaire.email %>"
                            <%} %>
                                id="contactSecondaire-email" type="text" name="contactSecondaire-email" class="form-input"
                                placeholder="Réponse">
                    </div>
                    <div class="form-group">
                        <label for="telephoneSecondaire" class="form-label">Téléphone du contact secondaire</label>
                        <input <% if(adherent.contactSecondaire) { %>
                        value="<%= adherent.contactSecondaire.telephone%>"
                            <%} %>
                                id="contactSecondaire-telephone" type="text" name="contactSecondaireTelephone"
                                class="form-input" placeholder="Réponse">
                    </div>
                    <input type="hidden" name="id" id="id" value="<%= adherent._id%>">

                    <div class="form-group">
                        <label for="contactSecondaire-linkedin" class="form-label">Linkedin du contact secondaire</label>
                        <input <% if(adherent.contactSecondaire) { %>
                        value="<%= adherent.contactSecondaire.linkedin %>"
                            <%} %>
                                id="contactSecondaire-linkedin" type="text" name="contactSecondaireLinkedin"
                                class="form-input" placeholder="Réponse">
                    </div>
                    <div class="form-action">
                        <button type="submit" class="cta">Modifier</button>
                    </div>
                </form>
            </div>
        </div>
        <%- include('../includes/succes.ejs') %>

            </body>

            <script src="js/index.js"></script>
            <script src="js/api.js"></script>

            </html>